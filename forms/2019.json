{
    "$schema": "../form-schema.json",
    "id": "2019",
    "icon": "space-shuttle",
    "name": "2019 Destination: Deep Space",
    "description": "Blast off with scouting with this form.",
    "items": [
        {
            "type": "number",
            "label": "The Team / Robot Number"
        },
        {
            "type": "header",
            "label": "Sandstorm Period"
        },
        {
            "type": "radio",
            "label": "What game piece did the robot start with?",
            "options": [
                "Hatch Panel",
                "Cargo"
            ],
            "default": 1
        },
        {
            "type": "boolean",
            "label": "Did the robot leave the HAB?",
            "default": false
        },
        {
            "type": "counter",
            "label": "How many Hatch Panels were scored during the sandstorm period?"
        },
        {
            "type": "counter",
            "label": "How much Cargo was scored during the sandstorm period?"
        },
        {
            "type": "header",
            "label": "Driver Period"
        },
        {
            "type": "counter",
            "label": "How many Hatch Panels were scored?"
        },
        {
            "type": "counter",
            "label": "How much Cargo was scored?"
        },
        {
            "type": "boolean",
            "label": "Can the robot pick hatch panels off the ground?"
        },
        {
            "type": "header",
            "label": "End Game"
        },
        {
            "type": "radio",
            "label": "What level did the robot climb to at the end of the match?",
            "options": ["0 (Wasn't in the HAB)", "1", "2", "3"]
        },
        {
            "type": "boolean",
            "label": "Can the robot even climb to level three. If you are not sure, select No."
        },
        {
            "type": "text-area",
            "label": "Other notes."
        }
    ]
}
